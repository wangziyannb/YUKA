<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory android:title="翻译设置">
        <ListPreference
            android:entries="@array/detect_languages"
            android:entryValues="@array/model"
            android:key="settings_detect_language"
            android:summary="可无视此选项"
            android:title="识别语言" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="settings_trans_switch"
            android:summaryOff="仅识别"
            android:summaryOn="已启用"
            android:title="启用翻译" />
        <ListPreference
            android:dependency="settings_trans_switch"
            android:entries="@array/translator_name"
            android:entryValues="@array/translator"
            android:key="settings_trans_translator"
            android:summary="默认谷歌"
            android:title="翻译器选择" />
        <SwitchPreference
            android:defaultValue="false"
            android:dependency="settings_trans_switch"
            android:key="settings_trans_SBCS"
            android:summaryOff="翻译英文等"
            android:summaryOn="翻译日韩文等"
            android:title="全半角转换（百度翻译）" />

    </PreferenceCategory>
    <PreferenceCategory android:title="同传设置">

        <SwitchPreference
            android:defaultValue="false"
            android:key="settings_trans_syncMode"
            android:summary="根据系统内录声音同声传译，需要目标app支持"
            android:title="启用同传" />
        <ListPreference
            android:dependency="settings_trans_syncMode"
            android:entries="@array/sync_provider"
            android:entryValues="@array/sync_providerset"
            android:key="settings_trans_syncProvider"
            android:title="翻译器选择" />
        <ListPreference
            android:dependency="settings_trans_syncMode"
            android:entries="@array/sync_mode"
            android:entryValues="@array/sync_modeset"
            android:key="settings_trans_syncModes"
            android:summary="默认实时传输"
            android:title="识别模式" />
        <ListPreference
            android:dependency="settings_trans_syncMode"
            android:entries="@array/sync_o_language"
            android:entryValues="@array/sync_o_languageset"
            android:key="settings_trans_sync_o"
            android:summary="默认中文"
            android:title="源音频语言" />
        <ListPreference
            android:dependency="settings_trans_syncMode"
            android:entries="@array/sync_t_language"
            android:entryValues="@array/sync_t_languageset"
            android:key="settings_trans_sync_t"
            android:summary="默认英文"
            android:title="译文语言" />
    </PreferenceCategory>
    <PreferenceCategory android:title="悬浮球设置">
        <SwitchPreference
            android:defaultValue="true"
            android:key="settings_ball_autoHide"
            android:summary="拖曳后3秒未点击自动隐藏"
            android:title="贴边隐藏" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="settings_ball_autoClose"
            android:summary="点击按钮后收回面板"
            android:title="自动收回" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="settings_ball_openLock"
            android:title="展开后锁定位置" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="settings_ball_safeMode"
            android:summary="启用安全区域，防止错误展开悬浮球"
            android:title="安全模式" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="settings_ball_fluidMode"
            android:summary="启用隐藏导航栏时使用,重启悬浮球生效"
            android:title="流体手势兼容" />
    </PreferenceCategory>
    <PreferenceCategory android:title="选词窗设置">
        <SwitchPreference
            android:defaultValue="false"
            android:key="settings_window_textBlackBg"
            android:summary="叠字现象严重时开启"
            android:title="文字背景描黑" />
        <SeekBarPreference
            android:key="settings_window_opacityBg"
            android:max="85"
            android:title="选词窗背景透明度（%）"
            android:summary="默认30%"
            app:adjustable="true"
            app:defaultValue="30"
            app:min="5"
            app:seekBarIncrement="10"
            app:showSeekBarValue="true"/>
        <SwitchPreference
            android:defaultValue="false"
            android:key="settings_window_originalText"
            android:summaryOff="只显示翻译"
            android:summaryOn="原文将同框显示"
            android:title="显示原文" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="settings_window_showTime"
            android:summary="不包括网络用时"
            android:title="显示翻译所用时间" />
    </PreferenceCategory>
    <PreferenceCategory android:title="进阶设置">
        <SwitchPreference
            android:key="settings_fastMode"
            android:summary="高性能要求，出现取词框消失请禁用"
            android:title="快速识别" />
        <SwitchPreference
            android:key="settings_continuousMode"
            android:summary="最多一个取词框，可配合快速识别"
            android:title="持续模式" />
        <SeekBarPreference
            android:dependency="settings_continuousMode"
            android:key="settings_continuousMode_interval"
            android:max="30"
            android:title="识别间隔（秒）"
            app:adjustable="true"
            app:defaultValue="6"
            app:min="2"
            app:seekBarIncrement="1" />
        <Preference
            android:key="settings_developer"
            android:title="开发者选项" />
    </PreferenceCategory>
</PreferenceScreen>