<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="Theme.NotFullActivity" parent="AppTheme">
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="CurtainActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/translucent_activity</item>
        <item name="android:windowBackground">@color/translucent_activity</item>
        <item name="android:windowIsTranslucent">true</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="ThemeOverlay.AppCompat.Dark" parent="Base.ThemeOverlay.AppCompat.Dark" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <declare-styleable name="TickView">
        <!--       圆半径-->
        <attr name="circleRadius" format="dimension" />
        <!--        画圈颜色 （透明度从 0 - 1）-->
        <attr name="circle_color" format="color" />
        <!--        画笔宽度（弧宽度）-->
        <attr name="circle_width" format="dimension" />

    </declare-styleable>

</resources>
