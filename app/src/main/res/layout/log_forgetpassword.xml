<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TableLayout
        android:id="@+id/change_password"
        android:layout_width="338dp"
        android:layout_height="182dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.616"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.095">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView29"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/log_forgetpwd_username" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/pwd_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/log_forgetpwd_input_1"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="72dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="@string/log_forgetpwd_pwd" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password_enter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/log_forgetpwd_input_2"
                android:inputType="textPassword"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <com.wzy.yuka.ui.view.CircleTickView
                android:id="@+id/ct_pwd"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="6dp"
                app:circleRadius="8dp"
                app:circle_width="2dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/textView28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/log_forgetpwd_confirm" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/log_forgetpwd_input_3"
                android:inputType="textPassword"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <com.wzy.yuka.ui.view.CircleTickView
                android:id="@+id/ct_success"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="6dp"
                app:circleRadius="8dp"
                app:circle_width="2dp" />

        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/password_commit"
        android:layout_width="144dp"
        android:layout_height="40dp"
        android:background="@drawable/radius_style"
        android:text="@string/log_forgetpwd_commit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/change_password"
        app:layout_constraintVertical_bias="0.17" />
</androidx.constraintlayout.widget.ConstraintLayout>
